{% extends "partials/question.template" %}

{% block field_ids %}
    {% set ids = [] %}
    {% for part in question.answers %}
        {% set part_id = 'af' ~ question.id ~ 'f' ~ loop.index0 %}
        {% for choice in part.choices %}
            {% set choice_id = part_id ~ 'f' ~ loop.index0 %}
            {{ ids.append(choice_id) or '' }}
        {% endfor %}
    {% endfor %}
    {{- ids | join(',') -}}
{% endblock %}

{% block body %}
    {% for part in question.answers %}
        {% set part_id = 'af' ~ question.id ~ 'f' ~ loop.index0 %}
        <response_lid ident="{{ part_id }}">
            <material>
                <mattext>{{ part.raw_label }}</mattext>
            </material>
            <render_choice>
                {% for choice in part.choices %}
                    {% set choice_id = part_id ~ 'f' ~ loop.index0 %}
                    <response_label ident="{{ choice_id }}">
                        <material>
                            <mattext texttype="text/plain">{{ choice.raw_text }}</mattext>
                        </material>
                    </response_label>
                {% endfor %}
            </render_choice>
        </response_lid>
    {% endfor %}
{% endblock %}

{% block scoring %}
    <resprocessing>
        <outcomes>
            <decvar maxvalue="100" minvalue="0" varname="SCORE" vartype="Decimal"/>
        </outcomes>
        {% for part in question.answers %}
            {% set part_id = 'af' ~ question.id ~ 'f' ~ loop.index0 %}
            {% for choice in part.choices %}
                {% set choice_id = part_id ~ 'f' ~ loop.index0 %}
                <respcondition continue="Yes">
                    <conditionvar>
                        <varequal respident="{{ part_id }}">{{ choice_id }}</varequal>
                    </conditionvar>
                    {% if choice.correct %}
                        <setvar varname="SCORE" action="Add">{{ question.points / (question.answers | length) }}</setvar>
                    {% endif %}
                    {% if choice.feedback %}
                        <displayfeedback feedbacktype="Response" linkrefid="{{ choice_id }}_fb"/>
                    {% endif %}
                </respcondition>
            {% endfor %}
        {% endfor %}
    </resprocessing>
{% endblock %}

{% block additional_feedback %}
    {% for part in question.answers %}
        {% set part_id = 'af' ~ question.id ~ 'f' ~ loop.index0 %}
        {% for choice in part.choices %}
            {% set choice_id = part_id ~ 'f' ~ loop.index0 %}
            {% if choice.feedback %}
                <itemfeedback ident="{{ choice_id }}_fb">
                    <flow_mat>
                        <material>
                            <mattext texttype="text/html">
                                {{ choide.feedback }}
                            </mattext>
                        </material>
                    </flow_mat>
                </itemfeedback>
            {% endif %}
        {% endfor %}
    {% endfor %}
{% endblock %}
